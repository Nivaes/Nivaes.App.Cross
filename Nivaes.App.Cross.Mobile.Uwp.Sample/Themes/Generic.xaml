<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nivaes.Professional365.UWP.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Nivaes.Crm.App.Mobile.Windows/Components/Styles/CoreApp.xaml"/>
        <ResourceDictionary Source="ms-appx:///Nivaes.Crm.App.Mobile.Windows/Components/Views/Notifications/NotificationItem.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="ValidationErrorTextBoxStyle" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="{ThemeResource ValidationErrorBrush}" />
    </Style>

    <Style x:Key="ValidationErrorCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="BorderBrush" Value="{ThemeResource ValidationErrorBrush}" />
    </Style>

    <Style x:Key="ValidationErrorPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="BorderBrush" Value="{ThemeResource ValidationErrorBrush}" />
    </Style>
</ResourceDictionary>
