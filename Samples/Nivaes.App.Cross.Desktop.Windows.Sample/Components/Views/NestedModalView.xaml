<views:MvxWpfView
    x:Class="Nivaes.App.Cross.Desktop.Windows.Wpf.Sample.NestedModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nivaes.App.Cross.Desktop.Windows.Wpf.Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=Nivaes.App.Cross.Windows.Wpf"
    xmlns:vm="clr-namespace:Nivaes.App.Cross.Sample;assembly=Nivaes.App.Cross.Sample"
    d:DesignHeight="300"
    d:DesignWidth="300"
    x:TypeArguments="vm:NestedModalViewModel"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Margin="5" Text="Nested Modal" />
        <Button
            Margin="5"
            Padding="5"
            Command="{Binding CloseCommand}"
            Content="Close" />
    </StackPanel>
</views:MvxWpfView>
